<Page x:Class="PoultryPOS.Views.TruckDriverView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Trucks &amp; Drivers">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="White" BorderBrush="#DDD" BorderThickness="1" Padding="20">
            <StackPanel>
                <TextBlock Text="TRUCKS MANAGEMENT" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Truck Name:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBox Name="txtTruckName" Height="30" Margin="0,0,0,10"/>

                        <TextBlock Text="Plate Number (Optional):" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBox Name="txtPlateNumber" Height="30" Margin="0,0,0,10"/>

                        <TextBlock Text="Current Load (Cages):" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBox Name="txtCurrentLoad" Height="30" Text="0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Margin="10,0,0,0">
                        <Button Name="btnAddTruck" Content="ADD" Height="30" Background="#27AE60" 
                                Foreground="White" FontWeight="Bold" Click="BtnAddTruck_Click"/>
                        <Button Name="btnUpdateTruck" Content="UPDATE" Height="30" Margin="0,5,0,0" Background="#3498DB" 
                                Foreground="White" FontWeight="Bold" Click="BtnUpdateTruck_Click"/>
                        <Button Name="btnDeleteTruck" Content="DELETE" Height="30" Margin="0,5,0,0" Background="#E74C3C" 
                                Foreground="White" FontWeight="Bold" Click="BtnDeleteTruck_Click"/>
                        <Button Name="btnClearTruck" Content="CLEAR" Height="30" Margin="0,5,0,0" Background="#95A5A6" 
                                Foreground="White" FontWeight="Bold" Click="BtnClearTruck_Click"/>
                    </StackPanel>
                </Grid>

                <DataGrid Name="dgTrucks" Height="350" AutoGenerateColumns="False" 
                          HeadersVisibility="Column" GridLinesVisibility="Horizontal" 
                          AlternatingRowBackground="#F8F9FA" SelectionChanged="DgTrucks_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Load" Binding="{Binding CurrentLoad}" Width="60"/>
                        <DataGridTextColumn Header="Plate" Binding="{Binding PlateNumber}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Border>

        <Border Grid.Column="2" Background="White" BorderBrush="#DDD" BorderThickness="1" Padding="20">
            <StackPanel>
                <TextBlock Text="DRIVERS MANAGEMENT" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Driver Name:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBox Name="txtDriverName" Height="30" Margin="0,0,0,15"/>

                        <TextBlock Text="Phone Number (Optional):" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBox Name="txtDriverPhone" Height="30"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Margin="10,0,0,0">
                        <Button Name="btnAddDriver" Content="ADD" Height="30" Background="#27AE60" 
                                Foreground="White" FontWeight="Bold" Click="BtnAddDriver_Click"/>
                        <Button Name="btnUpdateDriver" Content="UPDATE" Height="30" Margin="0,5,0,0" Background="#3498DB" 
                                Foreground="White" FontWeight="Bold" Click="BtnUpdateDriver_Click"/>
                        <Button Name="btnDeleteDriver" Content="DELETE" Height="30" Margin="0,5,0,0" Background="#E74C3C" 
                                Foreground="White" FontWeight="Bold" Click="BtnDeleteDriver_Click"/>
                        <Button Name="btnClearDriver" Content="CLEAR" Height="30" Margin="0,5,0,0" Background="#95A5A6" 
                                Foreground="White" FontWeight="Bold" Click="BtnClearDriver_Click"/>
                    </StackPanel>
                </Grid>

                <DataGrid Name="dgDrivers" Height="350" AutoGenerateColumns="False" 
                          HeadersVisibility="Column" GridLinesVisibility="Horizontal" 
                          AlternatingRowBackground="#F8F9FA" SelectionChanged="DgDrivers_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Phone" Binding="{Binding Phone}" Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Border>
    </Grid>
</Page>